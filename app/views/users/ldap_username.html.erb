<div class="row">
  <div class="col-md-12"> 
    <h1>Forgot Email?</h1>
    <p><%= _('If you have an existing DMPTool account, please enter the username you used and we send your email address right away.') %></p>
    <hr/>
  </div>
</div>
<div class="row">
  <div class="col-md-12"> 
    <%= form_tag users_ldap_account_path, class: 'form-horizontal', id:'forgot_email_form', remote: true do |f| %>  
      <div class="form-group">
        <%= label_tag :username, nil , class: 'control-label' %>
        <%= text_field_tag :username, '', class: 'form-control', placeholder: 'Enter DMPTool username' %>
      </div>

      <div class="form-group">
        <%= button_tag "Submit", class: "btn btn-default forgot_email_submit", type: :submit  %>
        <%= link_to "Cancel", root_path, class: "btn btn-default" %>
      </div>
    <% end %>

    <p><%= _("If you have forgotten your email and your username of the existing DMPTool account,  please click ") %><%= link_to 'here', contact_us_path %><%= _(" to contact us.")%></p>
  </div>
</div>

<div id="sign-in-create-account" class="modal fade" tabindex="-1" role="dialog">
  <%= render partial: 'shared/dmptool/access_controls' %>
</div>
