<div id="home-welcome-msg" class="row">
  <div class="col-md-12">
    <h1><%= _('Welcome') %></h1>
    <p><%= _('Create, review and share data management plans that meet institutional and funder requirements.') %></p>
  </div>
</div>

<div id="home-carousel" class="row" aria-hidden="true">
  <div class="col-md-12">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <% @carousel_images.each_with_index do |img, i| %>
          <li data-target="#carousel-example-generic" data-slide-to="<%= i %>"<%= i == 0 ? ' class=active' : '' %>></li>
        <% end %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% @carousel_images.each_with_index do |img, idx| %>
          <div class="item<%= idx == 0 ? ' active' : '' %>">
            <%= image_tag("carousel/#{img}", alt: _('Build your Data Management Plan'), class: "carousel-image") %>
          </div>
        <% end %>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<div class="row home-more-info-divider">
  <div class="col-md-12"><hr /></div>
</div>
<div id="home-more-info-titles" class="row">
  <div class="col-md-4">
    <h2><%= _('Get Started') %></h2>
  </div>
  <div class="col-md-4">
    <h2><%= _('DMPTool News') %></h2>
  </div>
</div>
<div class="row home-more-info-divider">
  <div class="col-md-12"><hr /></div>
</div>
<div id="home-more-info" class="row row-eq-height">
  <div class="col-md-4">
    <ul class="list-unstyled">
      <li><a href="#"><%= ('For Researchers') %></a></li>
      <li><a href="#"><%= ('For Administrators') %></a></li>
      <li><a href="#"><%= ('For Developers') %></a></li>
      <li><a href="#"><%= ('Sample DMPs') %></a></li>
      <li><a href="#"><%= ('General FAQs') %></a></li>
    </ul>
  </div>
  <div class="col-md-4">
    <% if @rss %>
      <ul class="list-unstyled">
        <% @rss.each do |i| %>
          <li><%= link_to(truncate(i.title, length: 42), i.link, :target => '_blank') %></li>
        <% end %>
      </ul>
    <% else %>
      <p>News is currently unavailable</p>
    <% end %>
  </div>
</div>
<div class="row home-more-info-divider">
  <div class="col-md-12"><hr /></div>
</div>

