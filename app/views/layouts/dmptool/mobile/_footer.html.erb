<%
  # Override the default Rails route helper for the contact_us page IF an alternate contact_us url was defined
  # in the branding config file
  contact_us = Rails.application.config.branding[:organisation][:contact_us_url] || contact_us_path
%>

<div class="footer-left">
  <!-- Links -->
  <ul>
    <li><a href="<%= about_us_path %>"><%= _('About') %></a></li>
    <li><a href="<%= terms_path %>"><%= _('Terms of use') %></a></li>
    <li><a href="<%= privacy_path %>"><%= _('Privacy statement') %></a></li>
    <li><a href="https://www.cdlib.org/about/accessibility.html"><%= _('Accessibility') %> <i class="fa fa-external-link">&nbsp;</i></a></li>
    <li><a href="https://github.com/cdluc3/dmptool"><%= _('Github') %> <i class="fa fa-external-link">&nbsp;</i></a></li>
    <li><a href="<%= contact_us_path %>"><%= _('Contact us') %></a></li>
    <li>
      <!-- Social media -->
      <a href="https://twitter.com/TheDMPTool"><span class="fa fa-twitter-square">&nbsp;</span></a>
      <a href="https://blog.dmptool.org/feed"><span class="fa fa-rss-square"></span></a>
    </li>
  </ul>

  <!-- Logo -->
  <%= image_tag('DMPTool_logo_blue_shades_v1b3b_no_tag.svg', alt: 'DMPTool Logo') %>

  <!-- Copyright -->
  <p class="flex-item navbar-text">
    <%= raw _('DMPTool is a service of the %{uc3} of the %{cdl}') % {
      uc3: "<a href=\"https://www.cdlib.org/uc3/\" target=\"_blank\">University of California Curation Center</a>",
      cdl: "<a href=\"http://www.cdlib.org/\" target=\"_blank\">California Digital Library</a>"
    } %>
    <br>
    <%= _('Copyright 2010-%{current_year} The Regents of the University of California') % {
      current_year: Date.today.year
    } %>
  </p>
</div>
